generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  agents       Agent[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Agent {
  id            String   @id @default(cuid())
  agent_name    String
  owner         String
  description   String?
  system_prompt String?
  user_id       String
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  scans         Scan[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([user_id])
}

model Scan {
  id                 String   @id @default(cuid())
  agent_id           String
  agent              Agent    @relation(fields: [agent_id], references: [id], onDelete: Cascade)
  status             String // 'pending', 'processing', 'completed', 'failed'
  security_score     Int? // 1-100
  vulnerabilities    Json? // Array of vulnerability objects
  attack_simulations Json? // Array of attack simulation objects
  remediation_steps  Json? // Array of remediation step objects
  error_message      String? // For failed scans
  prompt_snapshot    String? // FR-5.4: Snapshot of system prompt at scan time for comparison
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([agent_id])
  @@index([status])
}
